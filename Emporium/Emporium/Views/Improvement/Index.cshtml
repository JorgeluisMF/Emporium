@using EmporiumApp.Core.Application.ViewModels.Improvement
@model List<ImprovementViewModel>


<div class="row">

    <div class="col-8 mx-auto">


        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Mejoras</h1>
                    <p class="lead text-muted">Esta es la lista de mejoras</p>
                    <p>
                        <a asp-controller="Improvement" asp-action="Add" class="btn btn-danger my-2">Añadir Mejoras</a>
                    </p>
                </div>
            </div>
        </section>


        @if (Model == null || Model.Count == 0)
        {
            <section class="col-6 bg-danger rounded-3 text-white text-center mx-auto p-4 mt-5">
                <h3 class="display-8 fw-normal text-uppercase fw-bolder m-0"> No hay mejoras </h3>
            </section>
        }

        else
        {
            <table class="table table-hover">
                <thead>
                    <tr class="table-light">
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th class="text-center" scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ImprovementViewModel item in Model)

                    {
                        <tr class="table-light">
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <div class="d-flex justify-content-start w-100">

                                    <a asp-controller="Improvement" asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2 w-100"> Editar </a>
                                    <a asp-controller="Improvement" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-2 w-100"> Eliminar </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
    </div>

</div>
