@model EmporiumApp.Core.Application.ViewModels.User.UserSaveViewModel
@{
    bool mode = Model.IsVerified == false ? false : true;
    ViewData["Title"] = "Active User";
}

<div class="container-fluid">
    <div class="d-flex justify-content-center">
        <div class="col-6">


            <div class="card my-5">
                <div class="card-header bg-dark text-light">
                    <h3>
                        @(mode ? "Estas seguro que quieres desactivar este desarrollador?" : "Estas seguro que quieres activar este desarrollador??")
                    </h3>
                </div>

                <div class="card-body text-center">
                    <form method="post" asp-controller="Developer" asp-action="ActiveUser">
                        <input type="hidden" asp-for="Id" />

                        @if (mode)
                        {
                            <button type="submit" class="btn btn-danger me-3">Desactivar</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success me-3">Activate</button>
                        }
                        <a asp-controller="Developer" asp-action="Index" class="btn btn-outline-secondary text-dark">Cancelar</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
