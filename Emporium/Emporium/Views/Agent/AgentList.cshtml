@using EmporiumApp.Core.Application.ViewModels.User
@model List<UserViewModel>

@{
    //var propQty = ViewBag.PropertyQty;
}


<div class="row">
    <div class="col-8 mx-auto">
        <div class="container-fluid">

            <section class="py-5 text-center container">
                <div class="row py-lg-5">
                    <div class="col-lg-6 col-md-8 mx-auto">
                        <h1 class="fw-light">
                            Agentes Registrados
                        </h1>
                        <p class="lead text-muted">Esta es la lista registrada de agentes</p>

                    </div>
                </div>
            </section>


        </div>

        @if (Model == null || Model.Count == 0)
        {
            <h2>There are not agents</h2>
        }
        else
        {
            <table class="table table-hover mt-5">
                <thead>
                    <tr class="table-light">
                        <th scope="col">Name</th>
                        <th scope="col">LastName</th>
                        <th scope="col">Email</th>
                        <th scope="col">Number of properties</th>
                        <th class="text-center" scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (UserViewModel item in Model)
                    {
                        <tr class="table-light">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.PropQty</td>
                            <td>
                                <div class="d-flex gap-2 justify-content-start w-100">
                                    @if (item.IsVerified)
                                    {
                                        <a asp-controller="Agent" asp-action="ActiveUser" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger w-100">Desactivate</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Agent" asp-action="ActiveUser" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success w-100">Activate</a>
                                    }
                                    <a asp-controller="Agent"
                                       asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-danger me-2 w-100">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
