@model EmporiumApp.Core.Application.ViewModels.User.UserSaveViewModel
@{
    bool mode = Model.IsVerified == false ? false : true;
    ViewData["Title"] = "Active User";
}

<div class="container-fluid">
    <div class="d-flex justify-content-center">
        <div class="col-6">
            <div class="card my-5">
                <div class="card-header bg-dark text-light">
                    <h3>
                        @(mode ? "Are you sure you want to desactive this agent?" : "Are you sure you want to active this agent?")
                    </h3>
                </div>
                <div class="card-body text-center">
                    <form method="post" asp-controller="Agent" asp-action="ActiveUser">
                        <input type="hidden" asp-for="Id" />

                        @if (mode)
                        {
                            <button type="submit" class="btn btn-danger me-3">Desactivate</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success me-3">Activate</button>
                        }
                        <a asp-controller="Agent" asp-action="AgentList" class="btn btn-outline-secondary text-dark">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
