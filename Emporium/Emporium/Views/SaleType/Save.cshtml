@using EmporiumApp.Core.Application.ViewModels.SalesType
@model SaleTypeSaveViewModel

@{
    bool editMode = Model.Id == 0 ? false : true;
}

<div class="row">
    <div class="col-5 mx-auto">
        <div class="card shadow bg-light">
            <div class="card-body">


                <form asp-controller="SaleType" asp-action=@(editMode ? "Update" : "Add") method="post" class="row gap-3 my-3" enctype="multipart/form-data">


                    <div class="text-center my-2">
                        <h3 class="text-dark w-100">
                            @(editMode ? $"Edit Sale Type" : "Añadir tipo de venta")
                        </h3>
                    </div>

                    <section class="col-7 mx-auto mt-2">

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <label asp-for="Name"> Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                            <label asp-for="Description" class="form-label">Description</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </section>

                    <input type="hidden" asp-for="Id" name="Id" value="@Model.Id" />

                    <div class="col-8 mx-auto">
                        <button type="submit" class="btn btn-success btn-lg w-100 mt-2">Save</button>
                        <a asp-controller="SaleType" asp-action="Index" class="btn btn-secondary w-100 mt-2">Back</a>
                    </div>

                </form>


            </div>
        </div>
    </div>
</div>
